<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">#1de9b6</item>
        <item name="colorPrimaryVariant">#00bfa5</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">#00b0ff</item>
        <item name="colorSecondaryVariant">#0091ea</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#1e3c72</item>
        <item name="android:navigationBarColor">#1e3c72</item>

        <!-- App background -->
        <item name="android:windowBackground">@drawable/bg_gradient</item>

        <!-- Font -->
        <item name="android:fontFamily">sans-serif-medium</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/CustomButton</item>

        <!-- EditText styling -->
        <item name="textInputStyle">@style/CustomTextInput</item>
    </style>

    <!-- Rounded and clean button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Stylish TextInput field -->
    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- Quiz radio buttons look neat and minimal -->
    <style name="QuizRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:buttonTint">#1de9b6</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
